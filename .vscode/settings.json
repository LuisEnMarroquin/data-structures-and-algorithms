{
  "editor.tabSize": 2,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "editor.detectIndentation": false,
  "files.trimTrailingWhitespace": true,
  "search.exclude": {
    "**/LICENSE": true
  },
  "files.exclude": {
    "**/*.exe": true,
    "**/*.out": true,
    "**/.DS_Store": true,
    "**/.directory": true,
    "**/desktop.ini": true
  },
  "files.associations": {
    "**/*.json": "jsonc",
    "**/Containerfile": "dockerfile",
    "iostream": "cpp",
    "ostream": "cpp",
    "optional": "c",
    "istream": "c",
    "system_error": "c",
    "array": "c",
    "functional": "c",
    "tuple": "c",
    "type_traits": "c",
    "utility": "c"
  }
}
